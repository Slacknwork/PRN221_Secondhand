<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner bg-light">
                    <div class="carousel-item active">
                        <img class="" style="height:392.5px;width:392.5px;" src="@Model.Image" alt="Image">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3>@Model.Name</h3>
                <h3 class="font-weight-semi-bold mb-4">@String.Format("{0:#,##0 vnd;(#,##0 vnd);Zero}", Model.Price)</h3>
                <p class="">
                    Category: @Model.Category.Name
                <p>Created Date: @Model.Created</p>
                    @if (Model.Updated != null) {
                        <p>Updated Date: @Model.Updated</p>
                    }
                </p>
                
                <div class="d-flex mb-4">

                </div>
                <div class="d-flex align-items-center mb-4 pt-2">
                    <a href="/Wish/Create?id=@Model.Id" class="btn btn-primary px-3">
                        <i class="fas fa-heart mr-1"></i> Add To
                        WishList
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Description</a>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-pane-1">
                        <h4 class="mb-3">Description</h4>
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->

