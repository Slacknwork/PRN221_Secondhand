@using X.PagedList;
@using X.PagedList.Mvc.Core
@model IPagedList<Repository.Models.Post>
<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
/* Add a gray background color with some padding */

/* Header/Blog Title */

/* Create two unequal columns that floats next to each other */
/* Left column */
.leftcolumn {
    box-sizing: border-box;
    font-family: Arial;
    padding: 20px;
    background: #f1f1f1;
    float: left;
    width: 75%;
}

/* Right column */
.rightcolumn {
  float: left;
  width: 25%;
  padding-left: 20px;
}

/* Fake image */
.fakeimg {
  background-color: #aaa;
  width: 100%;
  padding: 20px;
}

/* Add a card effect for articles */
.card {
   background-color: white;
   padding: 20px;
   margin-top: 20px;
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}
.pagination li {
        text-align: center;
        margin-left: 5px;
        color: #000000;
        background-color: #b3b3ff;
        border-color: #17a2b8;
        font-size: 20px;
        width: 35px;
        text-align: center;
    }
/* Footer */
.footer {
  padding: 20px;
  text-align: center;
  background: #ddd;
  margin-top: 20px;
}

</style>

</head>

<body>
   
<div class="row">
        <div class="leftcolumn">
            <a class="btn btn-primary" href="/Post/createPost">Create Post</a>
        @foreach (var items in Model)
        {
            if (items.Status == 1)
            {
                <div class="card">
                        <div class="form-group">
                            <a class="btn btn-danger float-right" onclick="return confirm('Are you sure you want to delete this post ?');" href="/Post/deletePost?id=@items.Id">Delete</a>
                            <a class="btn btn-secondary float-right" href="/Post/editPost?id=@items.Id" style="margin-right:5px">Edit</a>
                            <h2>@items.Name</h2>
                            <p>Created: @items.Created
                            @if (@items.Updated != null)
                            {
                                <span> - Updated: @items.Updated</span>
                                }
                            </p>
                            <p>Category: @items.Category.Name</p>
                            <h4>@items.Description</h4>
                        </div>
                            <img src="@items.Image" alt="@items.Name" style="height:auto;width:auto">  
                </div>           
            }
        }
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
        </div>
        


        
</div>
</body>
</html>

