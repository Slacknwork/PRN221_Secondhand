@{
    ViewData["Title"] = "Change Password Page";
}
<h1 style="margin-bottom:20px ;" class="display-4">CHANGE PASSWORD</h1>
<form action="/Profile/ChangePassword" method="post">
    <div class="text-center">
        Enter Old Pass
    <input type="text" min="5" max="20" name="oldPass" />

    </div>
    <div class="text-center">
        Enter New Pass
    <input type="text" min="5" max="20" name="newPass" />

    </div>
    <div class="text-center">

    <input type="submit" value="Save" />
    </div>
</form>